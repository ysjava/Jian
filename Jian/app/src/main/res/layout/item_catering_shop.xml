<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay_item_shop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_6"
    android:layout_marginBottom="@dimen/dp_15"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/len_12"
        android:paddingBottom="@dimen/len_4"
        tools:ignore="RtlSymmetry,UselessParent">

        <FrameLayout
            android:id="@+id/lay_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/len_2">

            <com.wuxiankeneng.common.widget.RoundAngleImageView
                android:id="@+id/portrait"
                android:layout_width="@dimen/len_68"
                android:layout_height="@dimen/len_56"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/default_portrait" />

            <TextView
                android:id="@+id/txt_shop_suspend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/bg_shop_suspend"
                android:gravity="center"
                android:text="休息中"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_8"
                android:visibility="gone" />

        </FrameLayout>

        <TextView
            android:id="@+id/txt_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/len_10"
            android:layout_marginTop="@dimen/len_4"
            android:layout_toEndOf="@id/lay_frame"
            android:ellipsize="end"
            android:maxEms="7"
            android:singleLine="true"
            android:text="张二哥饭店"
            android:textColor="@color/grey_900"
            android:textSize="@dimen/sp_13"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_month_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_23"
            android:layout_toEndOf="@id/lay_frame"
            android:maxLength="10"
            android:maxLines="1"
            android:text="月售 : 99999"
            android:textSize="@dimen/sp_9" />

        <TextView
            android:id="@+id/txt_min_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_23"
            android:layout_toEndOf="@id/txt_month_sale"
            android:maxLength="10"
            android:maxLines="1"
            android:text="起送 : 10"
            android:textSize="@dimen/sp_9" />

        <TextView
            android:id="@+id/txt_delivery_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_23"
            android:layout_toEndOf="@id/txt_min_price"
            android:maxLength="10"
            android:maxLines="1"
            android:text="配送 : 1"
            android:textSize="@dimen/sp_9" />


        <TextView
            android:id="@+id/txt_delivery_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_16"
            android:maxLength="6"
            android:maxLines="1"
            android:text="30 分钟"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/txt_shop_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/len_16"
            android:layout_marginTop="@dimen/len_40"
            android:layout_toEndOf="@id/lay_frame"
            android:ellipsize="end"
            android:maxEms="14"
            android:singleLine="true"
            android:text="欢迎光临张二哥饭店! 支持预定"
            android:textColor="@color/black_alpha_80"
            android:textSize="@dimen/sp_10" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_76"
        android:baselineAligned="false"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_tui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/len_20"
                android:text="推"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/font_14"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/txt_jian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/len_20"
                android:text="荐"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/font_14"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/len_16"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="NestedWeights">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:padding="@dimen/dp_2"
                    android:id="@+id/tj_food_img_1"
                    android:layout_width="@dimen/len_52"
                    android:layout_height="@dimen/len_52"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/txt_tj_food_desc_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/len_4"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:textColor="@color/black_alpha_112"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="NestedWeights">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:padding="@dimen/dp_2"
                    android:id="@+id/tj_food_img_2"
                    android:layout_width="@dimen/len_52"
                    android:layout_height="@dimen/len_52"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/txt_tj_food_desc_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/len_4"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:textColor="@color/black_alpha_112"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="NestedWeights">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:padding="@dimen/dp_2"
                    android:id="@+id/tj_food_img_3"
                    android:layout_width="@dimen/len_52"
                    android:layout_height="@dimen/len_52"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/txt_tj_food_desc_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/len_4"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:textColor="@color/black_alpha_112"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>