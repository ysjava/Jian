<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/len_12"
        android:paddingBottom="@dimen/len_4"
        tools:ignore="RtlSymmetry,UselessParent">

        <com.wuxiankeneng.common.widget.RoundAngleImageView
            android:id="@+id/portrait"
            android:layout_width="@dimen/len_68"
            android:layout_height="@dimen/len_52"
            android:layout_marginTop="@dimen/len_2"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"

            android:src="@drawable/default_portrait" />

        <TextView
            android:id="@+id/txt_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/len_10"
            android:layout_marginTop="@dimen/len_4"
            android:layout_toEndOf="@id/portrait"
            android:ellipsize="end"
            android:maxEms="7"
            android:singleLine="true"
            android:text="张二哥饭店"
            android:textColor="@color/black"
            android:textSize="@dimen/len_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_shop_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/len_16"
            android:layout_marginTop="@dimen/len_32"
            android:layout_toEndOf="@id/portrait"
            android:ellipsize="end"
            android:maxEms="14"
            android:singleLine="true"
            android:text="欢迎光临张二哥饭店! 支持预定"
            android:textColor="@color/black_alpha_80"
            android:textSize="@dimen/font_14" />
    </RelativeLayout>

</LinearLayout>