<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/dp_8"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dp_8"
    android:paddingEnd="@dimen/dp_8"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingBottom="@dimen/len_4"
        tools:ignore="RtlSymmetry,UselessParent">
        <ImageView
            android:id="@+id/img_icon"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_search_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/len_10"
            android:layout_marginTop="@dimen/len_4"
            android:layout_toEndOf="@id/img_icon"
            android:ellipsize="end"
            android:maxEms="7"
            android:singleLine="true"
            android:text="张二哥饭店"
            android:textColor="@color/grey_800"
            android:textSize="@dimen/len_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_shop_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/len_16"
            android:layout_marginTop="@dimen/len_32"
            android:layout_toEndOf="@id/img_icon"
            android:ellipsize="end"
            android:maxEms="14"
            android:singleLine="true"
            android:text="欢迎光临张二哥饭店! 支持预定"
            android:textColor="@color/black_alpha_80"
            android:textSize="@dimen/font_14" />
    </RelativeLayout>

    <View
        android:background="@color/grey_400"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"/>
</LinearLayout>