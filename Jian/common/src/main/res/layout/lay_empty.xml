<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/dp_188"
    >

    <ImageView
        android:id="@+id/im_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:maxHeight="@dimen/dp_100"
        android:maxWidth="@dimen/dp_100"
        android:minHeight="@dimen/dp_48"
        android:minWidth="@dimen/dp_48"
        android:scaleType="centerInside"
        android:layout_gravity="center"
        android:src="@drawable/status_empty"
        android:tint="#9e9e9e" />

    <net.qiujuer.genius.ui.widget.Loading
        android:id="@+id/loading"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:visibility="gone"
        app:gAutoRun="false"
        android:layout_gravity="center"
        app:gBackgroundColor="@null"
        app:gForegroundColor="#9e9e9e"
        app:gForegroundLineSize="@dimen/dp_2"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/txt_empty"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_88"
        android:text="@string/prompt_empty"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#9e9e9e" />
</FrameLayout>